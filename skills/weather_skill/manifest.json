{
  "name": "weather_skill",
  "version": "2.0.0",
  "description": "Weather lookup skill for testing the runtime pipeline",
  "runtime": {
    "type": "python",
    "module": "handlers.main"
  },
  "permissions": [
    "network"
  ],
  "tools": [
    {
      "name": "get_weather",
      "entry": "handlers.main:get_weather",
      "description": "Return the latest weather conditions for a city",
      "timeout": 15,
      "input_schema": {
        "type": "object",
        "required": ["city"],
        "properties": {
          "city": {
            "type": "string",
            "minLength": 1
          }
        }
      },
      "output_schema": {
        "type": "object",
        "required": ["ok"],
        "properties": {
          "ok": {"type": "boolean"},
          "city": {"type": "string"},
          "temp": {"type": "number"},
          "description": {"type": "string"},
          "error": {"type": "string"}
        }
      }
    }
  ],
  "events": {
    "subscribe": ["nlp.intent.weather.get"],
    "publish": ["ui.notify"]
  }
}
